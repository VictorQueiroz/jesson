{
  "name": "jesson",
  "version": "0.0.11",
  "description": "A JSON parser and stringifier",
  "type": "module",
  "main": "./build/src/index.js",
  "exports": {
    ".": {
      "import": "./build/src/index.js",
      "types": "./build/src/index.d.ts"
    }
  },
  "files": [
    "build/src/**/*.{js,d.ts,map}",
    "README.md"
  ],
  "scripts": {
    "prepublishOnly": "npm run test:coverage && npm run build",
    "test": "ava",
    "test:coverage": "c8 --reporter=text --reporter=lcov ava",
    "build": "tsc -b src",
    "benchmark": "tsx benchmark/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VictorQueiroz/jesson.git"
  },
  "keywords": [
    "json",
    "parser",
    "stringifier",
    "bigint"
  ],
  "author": "Victor Queiroz",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "22.x",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "tinybench": "^2.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "tslib": "2.x"
  },
  "engines": {
    "node": ">=18"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx/esm"
    ],
    "files": [
      "test/**/*.test.ts"
    ]
  },
  "c8": {
    "all": true,
    "include": [
      "build/src/**/*.js"
    ],
    "exclude": [
      "build/test/**",
      "build/benchmark/**",
      "test/**",
      "benchmark/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  }
}
